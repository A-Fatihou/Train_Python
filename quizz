class Question:
    def __init__(self, prompt, answer):
        self.prompt = prompt
        self.answer = answer

question_prompts = [
    "Quelle est la couleur du ciel ?\n(a) Bleu\n(b) Rouge\n(c) Vert\n\n",
    "Quelle est la capitale de la France ?\n(a) Paris\n(b) Londres\n(c) Berlin\n\n",
    "Quelle est la racine carr√©e de 16 ?\n(a) 4\n(b) 8\n(c) 12\n\n"
]

questions = [
    Question(question_prompts[0], "a"),
    Question(question_prompts[1], "a"),
    Question(question_prompts[2], "a")
]

def run_quiz(questions):
    score = 0
    for question in questions:
        answer = input(question.prompt)
        if answer == question.answer:
            score += 1
    print("Votre score est de", score, "sur", len(questions))

run_quiz(questions)